<%- include('partials/head.ejs') %>
<body>
        <%-include('partials/header.ejs')%>
        <div class="heroSignIn"></div>
        <main class="backgroundSign">
            <div class="container-sign">
                 <div class="box-form">
                    <h3>Sign In</h3>  
                    <form action="/signIn" method="POST">
                        <input class="inputSign" type="email" name="email" placeholder="E-mail" required/>
                        <input class="inputSign" type="password" name="password" placeholder="Password" required/> 
                        <input class="boton-submit" type="Submit" value="Send" /> 
                    </form>  
                    <% if (error) { %>
                        <h3 style="color: red;"><%= error %></h3>
                    <% } %>                    
                </div>
                
            </div>
               
        </main>
        <%- include('partials/footer.ejs') %> 
</body>